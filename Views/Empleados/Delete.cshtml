@{
}

@model SistemaEmpleado.Models.Empleado

@{
    ViewData["Title"] = "Eliminar Empleado";
}

<h2>@ViewData["Title"]</h2>

<h4>¿Estás seguro que deseas eliminar este empleado?</h4>

<div class="card mt-3">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Nombre</dt>
            <dd class="col-sm-9">@Model.Nombre</dd>

            <dt class="col-sm-3">Departamento</dt>
            <dd class="col-sm-9">@Model.Departamento?.Nombre</dd>

            <dt class="col-sm-3">Cargo</dt>
            <dd class="col-sm-9">@Model.Cargo?.Nombre</dd>

            <dt class="col-sm-3">Fecha de Inicio</dt>
            <dd class="col-sm-9">@Model.FechaInicio.ToString("dd/MM/yyyy")</dd>

            <dt class="col-sm-3">Salario</dt>
            <dd class="col-sm-9">@Model.Salario.ToString("C")</dd>

            <dt class="col-sm-3">Estado</dt>
            <dd class="col-sm-9">@((Model.Estado) ? "Activo" : "Inactivo")</dd>
        </dl>

        <form asp-action="DeleteConfirmed" method="post">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger">Eliminar</button>
            <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
        </form>
    </div>
</div>

