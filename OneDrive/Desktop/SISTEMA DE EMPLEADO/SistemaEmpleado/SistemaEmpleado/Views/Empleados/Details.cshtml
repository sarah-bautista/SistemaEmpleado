@{
}

@model SistemaEmpleado.Models.Empleado

@{
    ViewData["Title"] = "Detalles del Empleado";
}

<h2>@ViewData["Title"]</h2>

<div class="card">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Nombre</dt>
            <dd class="col-sm-9">@Model.Nombre</dd>

            <dt class="col-sm-3">Departamento</dt>
            <dd class="col-sm-9">@Model.Departamento?.Nombre</dd>

            <dt class="col-sm-3">Cargo</dt>
            <dd class="col-sm-9">@Model.Cargo?.Nombre</dd>

            <dt class="col-sm-3">Fecha de Inicio</dt>
            <dd class="col-sm-9">@Model.FechaInicio.ToString("dd/MM/yyyy")</dd>

            <dt class="col-sm-3">Salario</dt>
            <dd class="col-sm-9">@Model.Salario.ToString("C")</dd>

            <dt class="col-sm-3">AFP</dt>
            <dd class="col-sm-9">@Model.AFP.ToString("C")</dd>

            <dt class="col-sm-3">ARS</dt>
            <dd class="col-sm-9">@Model.ARS.ToString("C")</dd>

            <dt class="col-sm-3">ISR</dt>
            <dd class="col-sm-9">@Model.ISR.ToString("C")</dd>

            <dt class="col-sm-3">Sueldo Neto</dt>
            <dd class="col-sm-9">@Model.SueldoNeto.ToString("C")</dd>

            <dt class="col-sm-3">Tiempo en la Empresa</dt>
            <dd class="col-sm-9">@Model.TiempoEnEmpresa</dd>

            <dt class="col-sm-3">Estado</dt>
            <dd class="col-sm-9">@((Model.Estado) ? "Activo" : "Inactivo")</dd>
        </dl>

        <a asp-action="Editar" asp-route-id="@Model.Id" class="btn btn-warning">Editar</a>
        <a asp-action="Index" class="btn btn-secondary">Volver a la lista</a>
    </div>
</div>


